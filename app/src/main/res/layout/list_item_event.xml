<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/list_item_event_title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/list_item_event_checkBox"
            android:padding="4dp"
            android:textStyle="bold"
            tools:text="Заголовок" />

        <TextView
            android:id="@+id/list_item_event_date_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_event_title_view"
            android:layout_toStartOf="@id/list_item_event_checkBox"
            android:padding="4dp"
            android:textStyle="bold"
            tools:text="Дата" />

        <CheckBox
            android:id="@+id/list_item_event_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="4dp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>